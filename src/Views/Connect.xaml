<Page x:Class="SmartEyeMonitor.Views.Connect"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:vm="clr-namespace:SmartEyeMonitor.ViewModels"
      xmlns:conv="clr-namespace:SmartEyeMonitor.Converters"
      xmlns:sec="clr-namespace:SEClient;assembly=SEClient"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      d:DesignWidth="800"
      FontSize="16"
      Title="Connect"
      Loaded="Page_Loaded">

    <Page.Resources>
        <vm:ConnectVM x:Key="vm"/>
        <conv:InverseConverter x:Key="inverse"/>
        
        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="2"/>
        </Style>

        <ObjectDataProvider x:Key="IntersectionSourceProvider"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="sec:IntersectionSource"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Page.Resources>

    <Grid DataContext="{StaticResource vm}"
          HorizontalAlignment="Center"
          VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="128"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0"
               Content="Host"/>
        <TextBox Grid.Row="0" Grid.Column="1"
                 Text="{Binding Host, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="1" Grid.Column="0"
               Content="Port"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 Text="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="2" Grid.Column="0"
               Content="Source"/>
        <ComboBox Grid.Row="2" Grid.Column="1"
                  ItemsSource="{Binding Source={StaticResource IntersectionSourceProvider}}"
                  SelectedItem="{Binding IntersectionSource, Mode=TwoWay}"/>

        <Label Grid.Row="3" Grid.Column="0"
               HorizontalContentAlignment="Right"
               Content="is filtered"/>
        <CheckBox Grid.Row="3" Grid.Column="1"
                  IsChecked="{Binding IsFiltered, Mode=TwoWay}"
                  VerticalAlignment="Center"/>

        <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                Margin="0,32,0,0"
                Padding="16"
                Content="Connect"
                IsEnabled="{Binding IsConnecting, Converter={StaticResource inverse}}"
                Click="Connect_Click"/>
    </Grid>
</Page>
